        <Button onAction="#handleRegister" alignment="TOP_LEFT" layoutX="603.0" layoutY="424.0"
                mnemonicParsing="false" prefHeight="32.0" prefWidth="114.0"
                style="-fx-background-color: transparent; -fx-border-color: #ffffff;"
                text="Registrarme" textFill="WHITE">
            <effect>
                <Blend />
            </effect>
            <font>
                <Font name="Arial" size="16.0" />
